{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "strict": true,
      "noEmit": false,
      "declaration": false,
      "outDir": "dist",
      "rootDir": ".",
      "allowSyntheticDefaultImports": true,
      "verbatimModuleSyntax": false
    },
    "include": ["test-runner.ts", "src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
  }